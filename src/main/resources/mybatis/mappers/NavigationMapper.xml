<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seven.Blog.dao.NavigationMapper">
    <resultMap id="BaseResultMap" type="com.seven.Blog.pojo.Navigation">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="priority" property="priority" jdbcType="INTEGER"/>
        <result column="link" property="link" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, priority, link, status
    </sql>
    
    <insert id="addNavigation" parameterType="Map">
        insert into
        navigation(name, priority, link, status)
        values(#{name}, #{priority}, #{link}, #{status})
    </insert>

    <select id="getAllNavigation" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from navigation
    </select>

    <select id="getNavigationByStatus" resultMap="BaseResultMap" parameterType="Integer">
        select
        <include refid="Base_Column_List"/>
        from navigation
        where status = #{status}
        order by priority desc
    </select>

    <delete id="deleteNavigationByPrimaryKey" parameterType="Integer">
        delete from navigation
        where
        id = #{id}
    </delete>

    <update id="updateNavigation" parameterType="Navigation">
        update navigation
        set
        name = #{name},
        priority = #{priority},
        link = #{link},
        status = #{status}
        where id = #{id}
    </update>

    <select id="selectedByPrimaryKey" resultMap="BaseResultMap" parameterType="Integer">
        select
        <include refid="Base_Column_List"/>
        from navigation
        where id = #{id}
    </select>

</mapper>