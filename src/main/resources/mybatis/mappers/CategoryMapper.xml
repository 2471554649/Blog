<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.seven.Blog.dao.CategoryMapper">
    <resultMap id="BaseResultMap" type="com.seven.Blog.pojo.Category">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="parent_id" property="parentId" jdbcType="BIGINT"/>
        <result column="status" property="status" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, name, parent_id, status
    </sql>

    <select id="selectedByPrimaryKey" resultMap="BaseResultMap" parameterType="Integer">
        select
        <include refid="Base_Column_List"/>
        from category
        where id = #{id}
    </select>
    
    <select id="getAllCategory" resultMap="BaseResultMap" parameterType="Map">
        select
        <include refid="Base_Column_List"/>
        from category
        limit #{size}
        offset #{offset}
    </select>
    
    <insert id="addCategory" parameterType="Map">
        insert into
        category (name, parent_id, status)
        values(#{name}, #{parentId}, #{status})
    </insert>
    
    <update id="updateCategory" parameterType="Category">
        update category
        set
        name = #{name},
        parent_id = #{parentId},
        status = #{status}
        where id = #{id}
    </update>
    
    <delete id="deleteCategoryByPrimaryKey" parameterType="Integer">
        delete from category
        where
        id = #{id}
    </delete>

    <select id="selectedCategoryNameByPrimaryKey" resultType="String" parameterType="Integer">
        select name from category where id = #{id}
    </select>

    <select id="getCategoriesByStatus" resultMap="BaseResultMap" parameterType="Integer">
        select
        <include refid="Base_Column_List"/>
        from category
        where
        status = #{status}
    </select>

    <select id="getChildCategory" resultMap="BaseResultMap" parameterType="Integer">
        select
        <include refid="Base_Column_List"/>
        from category
        where parent_id = #{parentId}
        and status = 1
    </select>

    <select id="getCategoryCount" resultType="Integer">
        select count(*) from category
    </select>

    <!-- *************************二期工程************************************-->

    <select id="selectAll" resultType="com.seven.Blog.dto.backend.CategoryDTO">
        select a.id, a.name, a.parent_id as parentId, b.name as parentName, a.status
        from category a, category b
        where a.parent_id = b.id
        order by a.id

    </select>

    <select id="selectById" parameterType="Integer" resultType="com.seven.Blog.dto.backend.CategoryDTO">
        select a.id, a.name, a.parent_id as parentId, b.name as parentName, a.status
        from category a, category b
        where a.id = #{id} and a.parent_id = b.id
    </select>

    <select id="selectByStatus" resultType="com.seven.Blog.dto.backend.CategoryDTO" parameterType="Integer">
        select a.id, a.name, a.parent_id as parentId, b.name as parentName, a.status
        from category a, category b
        where a.parent_id = b.id and status = #{status}
        order by a.id
    </select>
    
    <select id="selectStatusById" parameterType="Integer" resultType="Integer">
        select status
        from category
        where id = #{id}
    </select>

    <select id="selectFirstLevel" resultType="com.seven.Blog.dto.backend.CategoryDTO">
        select id, name
        from category
        where parent_id = 0 and status = 1
        order by id
    </select>

    <insert id="insert" parameterType="Category">
        insert into
        category(name, parent_id, status)
        values(#{name}, #{parentId}, #{status})
    </insert>

    <update id="update" parameterType="Category">
        update category
        set name = #{name},
        parent_id = #{parentId},
        status = #{status}
        where id = #{id}
    </update>
    
    <update id="updateStatus" parameterType="Map">
        update category
        set status = #{status}
        where id = #{id}
    </update>

    <delete id="delete" parameterType="Integer">
        delete from
        category
        where id = #{id}
    </delete>
</mapper>